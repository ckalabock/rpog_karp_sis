<Window x:Class="BiblApp.Windows.AuthorManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authors" Height="470" Width="760"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="AuthorsDataGrid"
                  Grid.Row="0"
                  Margin="0,0,0,12"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate, StringFormat='yyyy-MM-dd'}" Width="130"/>
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Margin="0,0,10,0" Content="Add" Click="AddButton_Click"/>
            <Button Width="100" Margin="0,0,10,0" Content="Edit" Click="EditButton_Click"/>
            <Button Width="100" Margin="0,0,10,0" Content="Delete" Click="DeleteButton_Click"/>
            <Button Width="100" Content="Close" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
